<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="48dp"
             android:focusable="true"
             android:clickable="true"
             android:id="@+id/ucw_item_root"
             android:foreground="@drawable/ucw_item_foreground">
    <com.uploadcare.android.widget.view.SquaredImageView android:id="@+id/ucw_item_tb"
                                                         android:layout_width="24dp"
                                                         android:layout_height="24dp"
                                                         android:adjustViewBounds="true"
                                                         android:scaleType="centerCrop"
                                                         android:layout_marginLeft="16dp"
                                                         android:layout_gravity="center_vertical|start"/>
    <TextView
            android:id="@+id/ucw_item_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/ucw_black_text_87"
            android:ellipsize="marquee"
            android:maxLines="1"/>
</FrameLayout>